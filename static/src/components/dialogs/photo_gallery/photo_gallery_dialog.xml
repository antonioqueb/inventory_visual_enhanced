<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    
    <t t-name="inventory_visual_enhanced.PhotoGalleryDialog" owl="1">
        <Dialog size="'xl'" contentClass="'h-100'">
            <div class="o_photo_gallery_dialog d-flex flex-column h-100">
                
                <!-- ========== EDITOR DE DIBUJO FULLSCREEN ========== -->
                <div t-if="state.showDrawingEditor" 
                     class="drawing-editor-fullscreen position-fixed top-0 start-0 w-100 h-100 d-flex flex-column"
                     style="z-index: 9999; background: #000;">
                    
                    <!-- Toolbar superior -->
                    <div class="drawing-toolbar bg-dark text-white p-2 d-flex align-items-center gap-2 flex-wrap">
                        <!-- Cerrar -->
                        <button class="btn btn-outline-light btn-sm" t-on-click="closeDrawingEditor">
                            <i class="fa fa-times"></i>
                        </button>
                        
                        <!-- Colores -->
                        <div class="d-flex gap-1 ms-2">
                            <t t-foreach="availableColors" t-as="colorOption" t-key="colorOption.color">
                                <button 
                                    class="btn btn-sm p-0"
                                    t-att-style="`background-color: ${colorOption.color}; width: 32px; height: 32px; border: 3px solid ${state.brushColor === colorOption.color ? '#fff' : 'transparent'}; border-radius: 50%;`"
                                    t-on-click="() => this.setColor(colorOption.color)"
                                ></button>
                            </t>
                        </div>
                        
                        <!-- Tamaño -->
                        <div class="d-flex align-items-center gap-1 ms-2">
                            <i class="fa fa-circle" style="font-size: 6px;"></i>
                            <input 
                                type="range" 
                                min="2" 
                                max="20" 
                                t-att-value="state.brushSize"
                                t-on-input="(e) => this.setBrushSize(e.target.value)"
                                style="width: 80px;"
                            />
                            <i class="fa fa-circle" style="font-size: 14px;"></i>
                        </div>
                        
                        <!-- Spacer -->
                        <div class="flex-grow-1"></div>
                        
                        <!-- Deshacer -->
                        <button 
                            class="btn btn-outline-warning btn-sm"
                            t-on-click="undoLastStroke"
                            t-att-disabled="!state.canUndo"
                        >
                            <i class="fa fa-undo"></i>
                        </button>
                        
                        <!-- Limpiar -->
                        <button 
                            class="btn btn-outline-danger btn-sm"
                            t-on-click="clearDrawing"
                            t-att-disabled="!state.canUndo"
                        >
                            <i class="fa fa-trash"></i>
                        </button>
                        
                        <!-- Guardar -->
                        <button class="btn btn-success btn-sm" t-on-click="saveDrawingAndClose">
                            <i class="fa fa-check me-1"></i>
                            <span class="d-none d-sm-inline">Listo</span>
                        </button>
                    </div>
                    
                    <!-- Área de dibujo -->
                    <div class="drawing-area flex-grow-1 d-flex align-items-center justify-content-center position-relative overflow-hidden"
                         style="touch-action: none;">
                        <!-- Imagen de fondo -->
                        <img 
                            t-ref="editorImage"
                            t-att-src="state.previewUrl"
                            class="position-absolute"
                            style="max-width: 100%; max-height: 100%; object-fit: contain; pointer-events: none;"
                        />
                        <!-- Canvas de dibujo -->
                        <canvas 
                            t-ref="editorCanvas"
                            class="position-absolute"
                            style="touch-action: none; cursor: crosshair;"
                            t-on-pointerdown="onCanvasPointerDown"
                            t-on-pointermove="onCanvasPointerMove"
                            t-on-pointerup="onCanvasPointerUp"
                            t-on-pointerleave="onCanvasPointerUp"
                            t-on-touchstart.stop.prevent="onCanvasPointerDown"
                            t-on-touchmove.stop.prevent="onCanvasPointerMove"
                            t-on-touchend.stop.prevent="onCanvasPointerUp"
                        ></canvas>
                    </div>
                    
                    <!-- Indicador -->
                    <div class="bg-dark text-white text-center py-1" style="font-size: 12px;">
                        <i class="fa fa-hand-pointer-o me-1"></i>
                        Dibuja con el dedo o mouse sobre la imagen
                    </div>
                </div>

                <!-- ========== VISOR DE FOTOS ========== -->
                <t t-if="hasPhotos and !state.showUploadForm">
                    <div class="photo-viewer-section flex-grow-1 d-flex flex-column mb-3" style="min-height: 0;">
                        <div class="position-relative flex-grow-1 d-flex flex-column" style="min-height: 0;">
                            <div class="text-center bg-dark rounded p-2 flex-grow-1 d-flex align-items-center justify-content-center" style="min-height: 0; overflow: hidden;">
                                <img 
                                    t-att-src="`data:image/png;base64,${currentPhoto.image}`"
                                    class="img-fluid rounded shadow-lg"
                                    style="max-height: calc(100vh - 350px); max-width: 100%; object-fit: contain; cursor: pointer;"
                                    t-on-click="() => this.openImageInNewTab(currentPhoto.image)"
                                    t-att-alt="currentPhoto.name"
                                    title="Click para ver en tamaño completo"
                                />
                            </div>
                            
                            <t t-if="photosData.photos.length > 1">
                                <button 
                                    class="btn btn-light position-absolute top-50 start-0 translate-middle-y ms-3 shadow-lg"
                                    style="z-index: 10; opacity: 0.9; width: 50px; height: 50px;"
                                    t-on-click="prevPhoto"
                                    t-att-disabled="state.currentImageIndex === 0"
                                >
                                    <i class="fa fa-chevron-left fa-lg"></i>
                                </button>
                                <button 
                                    class="btn btn-light position-absolute top-50 end-0 translate-middle-y me-3 shadow-lg"
                                    style="z-index: 10; opacity: 0.9; width: 50px; height: 50px;"
                                    t-on-click="nextPhoto"
                                    t-att-disabled="state.currentImageIndex === photosData.photos.length - 1"
                                >
                                    <i class="fa fa-chevron-right fa-lg"></i>
                                </button>
                            </t>
                            
                            <div class="position-absolute top-0 end-0 m-3">
                                <span class="badge bg-dark bg-opacity-75 px-3 py-2 fs-6">
                                    <i class="fa fa-image me-2"></i>
                                    <strong><t t-esc="state.currentImageIndex + 1"/> / <t t-esc="photosData.photos.length"/></strong>
                                </span>
                            </div>
                        </div>
                        
                        <div class="mt-2 p-2 bg-light rounded border">
                            <h6 class="mb-1">
                                <i class="fa fa-tag text-secondary me-2"></i>
                                <strong t-esc="currentPhoto.name"></strong>
                            </h6>
                            <div class="d-flex gap-3">
                                <small class="text-muted">
                                    <i class="fa fa-calendar me-1"></i>
                                    <t t-esc="currentPhoto.fecha_captura"/>
                                </small>
                                <small t-if="currentPhoto.notas" class="text-muted" t-esc="currentPhoto.notas"></small>
                            </div>
                        </div>
                        
                        <t t-if="photosData.photos.length > 1">
                            <div class="d-flex gap-2 mt-2 overflow-auto pb-2" style="max-height: 100px;">
                                <t t-foreach="photosData.photos" t-as="photo" t-key="photo.id">
                                    <div 
                                        class="border rounded p-1 flex-shrink-0"
                                        t-att-class="{ 'border-secondary border-3': photo_index === state.currentImageIndex }"
                                        t-on-click="() => this.state.currentImageIndex = photo_index"
                                        style="cursor: pointer; width: 80px; height: 80px;"
                                    >
                                        <img 
                                            t-att-src="`data:image/png;base64,${photo.image}`"
                                            class="img-fluid rounded"
                                            style="width: 100%; height: 100%; object-fit: cover;"
                                        />
                                    </div>
                                </t>
                            </div>
                        </t>
                    </div>
                    <hr class="my-2"/>
                </t>
                
                <!-- SI NO HAY FOTOS -->
                <t t-if="!hasPhotos and !state.showUploadForm">
                    <div class="text-center py-5 mb-3">
                        <i class="fa fa-camera" style="font-size: 64px; color: #ccc;"></i>
                        <p class="text-muted mt-3 mb-0">No hay fotografías para este lote</p>
                    </div>
                    <hr class="my-2"/>
                </t>

                <!-- BOTÓN AGREGAR (cuando no hay editor abierto) -->
                <t t-if="!state.showUploadForm">
                    <div class="text-center mb-2">
                        <button class="btn btn-secondary btn-lg" t-on-click="toggleUploadForm">
                            <i class="fa fa-plus-circle me-2"></i>
                            Agregar Nueva Fotografía
                        </button>
                    </div>
                </t>

                <!-- ========== EDITOR DE FOTO (después de seleccionar) ========== -->
                <t t-if="state.showEditor">
                    <div class="upload-section flex-grow-1 d-flex flex-column">
                        
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h5 class="mb-0">
                                <i class="fa fa-camera text-secondary me-2"></i>
                                Nueva Fotografía
                            </h5>
                            <button class="btn btn-outline-secondary btn-sm" t-on-click="toggleUploadForm">
                                <i class="fa fa-times me-1"></i> Cancelar
                            </button>
                        </div>

                        <!-- Nombre -->
                        <div class="mb-3">
                            <input 
                                type="text" 
                                class="form-control"
                                placeholder="Nombre de la foto"
                                t-model="state.photoName"
                                t-on-input="onPhotoNameChange"
                            />
                        </div>

                        <!-- Info compresión -->
                        <div class="alert alert-info py-2 mb-3" t-if="state.compressionInfo">
                            <small>
                                <i class="fa fa-info-circle me-1"></i>
                                Original: <strong t-esc="state.compressionInfo.originalSize"></strong>
                                <t t-if="state.compressionInfo.compressedSize">
                                    → <strong t-esc="state.compressionInfo.compressedSize"></strong>
                                </t>
                            </small>
                        </div>

                        <!-- Preview de imagen -->
                        <div class="text-center mb-3 position-relative">
                            <img 
                                t-ref="previewImage"
                                t-att-src="state.previewUrl"
                                class="img-fluid rounded shadow"
                                style="max-height: 40vh; max-width: 100%;"
                            />
                            
                            <!-- Indicador de anotaciones -->
                            <div t-if="state.canUndo" class="position-absolute top-0 end-0 m-2">
                                <span class="badge bg-warning text-dark">
                                    <i class="fa fa-pencil me-1"></i>
                                    Con anotaciones
                                </span>
                            </div>
                        </div>

                        <!-- Botones de acción -->
                        <div class="d-flex gap-2 mb-3">
                            <button class="btn btn-outline-secondary flex-grow-1" t-on-click="openFilePicker">
                                <i class="fa fa-refresh me-1"></i>
                                Cambiar
                            </button>
                            <button class="btn btn-outline-warning flex-grow-1" t-on-click="openDrawingEditor">
                                <i class="fa fa-pencil me-1"></i>
                                Dibujar
                            </button>
                        </div>

                        <!-- Botón subir -->
                        <button 
                            class="btn btn-success btn-lg w-100 py-3"
                            t-on-click="uploadPhoto"
                            t-att-disabled="state.isUploading"
                        >
                            <t t-if="!state.isUploading">
                                <i class="fa fa-cloud-upload me-2"></i>
                                Guardar Fotografía
                            </t>
                            <t t-else="">
                                <i class="fa fa-spinner fa-spin me-2"></i>
                                Subiendo...
                            </t>
                        </button>
                    </div>
                </t>
            </div>

            <t t-set-slot="footer">
                <button class="btn btn-secondary" t-on-click="props.close">
                    Cerrar
                </button>
            </t>
        </Dialog>
    </t>
    
</templates>